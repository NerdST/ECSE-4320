[global]
# Target device/partition
filename=/dev/nvme0n1p7
# Bypass OS cache for true disk performance measurement
direct=1
# Asynchronous I/O engine for high performance/NVMe
ioengine=libaio
# Run each test for 30 seconds
runtime=30
# Report results as a group
group_reporting
# Use a single job for consistent results
numjobs=1
# Time-based testing
time_based=1
# Size of the test file
size=10G

# --- 1. Zero-queue baselines (QD=1) ---

[baseline_4k_randread]
rw=randread
bs=4k
iodepth=1

[baseline_4k_randwrite]
rw=randwrite
bs=4k
iodepth=1

[baseline_4k_read]
rw=read
bs=4k
iodepth=1

[baseline_4k_write]
rw=write
bs=4k
iodepth=1

[baseline_128k_randread]
rw=randread
bs=128k
iodepth=1

[baseline_128k_randwrite]
rw=randwrite
bs=128k
iodepth=1

[baseline_128k_read]
rw=read
bs=128k
iodepth=1

[baseline_128k_write]
rw=write
bs=128k
iodepth=1

# --- 2. Block-size sweep (QD=1) ---

[bsweep_4k_randread]
rw=randread
bs=4k
iodepth=1

[bsweep_16k_randread]
rw=randread
bs=16k
iodepth=1

[bsweep_32k_randread]
rw=randread
bs=32k
iodepth=1

[bsweep_64k_randread]
rw=randread
bs=64k
iodepth=1

[bsweep_128k_randread]
rw=randread
bs=128k
iodepth=1

[bsweep_256k_randread]
rw=randread
bs=256k
iodepth=1

[bsweep_4k_read]
rw=read
bs=4k
iodepth=1

[bsweep_16k_read]
rw=read
bs=16k
iodepth=1

[bsweep_32k_read]
rw=read
bs=32k
iodepth=1

[bsweep_64k_read]
rw=read
bs=64k
iodepth=1

[bsweep_128k_read]
rw=read
bs=128k
iodepth=1

[bsweep_256k_read]
rw=read
bs=256k
iodepth=1

# --- 3. Read/Write mix sweep (4K random, QD=1) ---

[mix_100r]
rw=randrw
rwmixread=100
bs=4k
iodepth=1

[mix_70r]
rw=randrw
rwmixread=70
bs=4k
iodepth=1

[mix_50r]
rw=randrw
rwmixread=50
bs=4k
iodepth=1

